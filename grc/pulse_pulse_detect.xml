<?xml version="1.0"?>
<block>
  <name>Pulse Detect</name>
  <key>pulse_pulse_detect</key>
  <category>Pulse</category>
  <import>import pulse</import>
  <make>pulse.pulse_detect($sample_average, $average_multiple)</make>

  <param>
    <name>Sample Average</name>
    <key>sample_average</key>
    <type>int</type>
  </param>

  <param>
    <name>Average Multiple</name>
    <key>average_multiple</key>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

</block>
